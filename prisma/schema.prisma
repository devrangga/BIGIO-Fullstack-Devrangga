generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  Financial
  Technology
  Health
}

enum Status {
  Draft
  Publish
}

model Story {
  id        String    @id @default(uuid())
  title     String    @unique
  writers   String
  synopsis  String
  category  Category
  keyword   String[]
  status    Status
  chapter   Chapter[] @relation("StoryChapters")
  updatedAt DateTime  @updatedAt
}

model Chapter {
  id          String   @id @default(uuid())
  storyId     String
  title       String
  content     String
  lastUpdated DateTime
  story       Story    @relation("StoryChapters", fields: [storyId], references: [id])
  updatedAt   DateTime @updatedAt
}
